{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2019",
    "lib": ["ES2019", "DOM", "DOM.iterable"],
    "esModuleInterop": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@oswee/*": ["*", "bazel-bin/*", "bazel-genfiles/*"],
      "@oswee/components/*": ["components/*/src"],
      "@oswee/lib/*": ["lib/*/src"],
      "@oswee/lib/shared/*": ["lib/shared/*/src"],
      "@oswee/tools/*": ["tools/*/src"],
      "@oswee/elements/*": ["lib/elements/oswee/*/src"],
      "@oswee/packages/*": ["packages/*/src"],
      "@oswee/platform/web/assets/*": ["platform/web/src/assets/*"],
      "@oswee/container/*": ["platform/web/src/ui/containers/*/src"],
      "@oswee/feature/*": ["platform/web/src/store/src/lib/features/*/src"]
    },
    "plugins": [
      {
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "disableNoUnusedVariableRule": false,
        "suppressWhileTypeErrorsPresent": false
      }
    ]
  },
  "exclude": ["bazel-*", "node_modules"]
}

